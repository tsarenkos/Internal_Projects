@model TaskTracker.Models.ChangePasswordModel
@{
    ViewBag.Title = "Изменение пароля";
}
<h2>Смена пароля</h2>
<div class="row">
    <div class="col-md-4">
        <section>
            <form asp-action="ChangePassword" asp-controller="Account">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label asp-for="OldPassword" class="control-label">Старый пароль</label>
                    <input type="password" asp-for="OldPassword" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="NewPassword" class="control-label">Новый пароль</label>
                    <input type="password" asp-for="NewPassword" class="form-control" />
                </div>
                <div class="form-group">
                    <label asp-for="ConfirmPassword" class="control-label">Подтверждение пароля</label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" />
                </div>

                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Сохранить</button>
                    <button type="button" class="btn btn-primary" onclick="location.href = '/';">Отмена</button>
                </div>
            </form>
        </section>
    </div>
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("~/Views/Shared/_ValidationScriptsPartial.cshtml");}
    @if (ViewBag.ChangePassword != null && ViewBag.ChangePassword)
    {
        <script tyype="text/javascript">alert('Пароль был изменен.'); location.href = '/';</script>
    }
}
